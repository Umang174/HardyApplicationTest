<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_title_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/margin10dp"
            android:paddingTop="@dimen/margin10dp"
            android:paddingBottom="@dimen/margin10dp"
            android:textSize="18dp"
            android:textStyle="normal"
            android:text="@string/Disease_title">
        </TextView>

        <TextView
            android:id="@+id/txt_count_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/margin10dp"
            android:paddingTop="@dimen/margin10dp"
            android:paddingBottom="@dimen/margin10dp"
            android:textSize="18dp"
            android:textStyle="normal"
            android:text="@string/Disease_Count">

        </TextView>

    </LinearLayout>


</RelativeLayout>